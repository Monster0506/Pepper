%% Test: Variable Declaration and Basic Operations

%% Integer variables
LET x: int = 10 %% assign 10 to x
LET y: int = 5
SHOW(x)
SHOW(y)

%% Float variables
LET pi: float = 3.14159
LET e: float = 2.71828
SHOW(pi)
SHOW(e)

%% String variables
LET greeting: string = "Hello"
LET name: string = "World"
SHOW(greeting)
SHOW(name)

%% Boolean variables
LET isTrue: bool = true
LET isFalse: bool = false
SHOW(isTrue)
SHOW(isFalse)

%% Basic arithmetic
REAS x = x y +
SHOW(x)
REAS y = x y *
SHOW(y)
REAS pi = pi 2 *
SHOW(pi)
